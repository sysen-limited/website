{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Venzra Website - CloudFront",
    "Parameters": {
        "S3StackName": {
            "Description": "Name of the S3 stack used by CloudFront",
            "Type": "String"
        },
        "CertificateArn": {
            "Description": "The Amazon Certificate ARN to be used with the CloudFront distribution",
            "Type": "String"
        },
        "MinProtocolVersion": {
            "Description": "Any protocol below the specified value will not be supported",
            "Type": "String",
            "Default": "TLSv1.1_2016"
        },
        "DistributionPriceClass": {
            "Description": "Defines the number of edge locations to be used for this distribution. https://docs.aws.amazon.com/cloudfront/latest/APIReference/API_DistributionConfig.html",
            "Type": "String",
            "AllowedValues": [
                "PriceClass_100",
                "PriceClass_200",
                "PriceClass_All"
            ],
            "Default": "PriceClass_100"
        },
        "HostedZone": {
            "Description": "The hosted zone that we want to add Route53 records too",
            "Type": "String",
            "Default": "venzra.com."
        },
        "HostedZoneID": {
            "Description": "The CloudFront hosted zone ID: https://docs.aws.amazon.com/general/latest/gr/rande.html#cf_region",
            "Type": "String",
            "Default": "Z2FDTNDATAQYW2"
        }
    },
    "Resources": {
        "CloudFrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Enabled": "true",
                    "Aliases": [
                        {
                            "Fn::ImportValue": {
                                "Fn::Sub": "${S3StackName}-BucketName"
                            }
                        }
                    ],
                    "ViewerCertificate": {
                        "AcmCertificateArn": {
                            "Ref": "CertificateArn"
                        },
                        "MinimumProtocolVersion": {
                            "Ref": "MinProtocolVersion"
                        },
                        "SslSupportMethod": "sni-only"
                    },
                    "PriceClass": {
                        "Ref": "DistributionPriceClass"
                    },
                    "Origins": [
                        {
                            "DomainName": {
                                "Fn::Join": [
                                    "",
                                    [
                                        {
                                            "Fn::ImportValue": {
                                                "Fn::Sub": "${S3StackName}-BucketName"
                                            }
                                        },
                                        ".s3.amazonaws.com"
                                    ]
                                ]
                            },
                            "Id": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "S3-",
                                        {
                                            "Fn::ImportValue": {
                                                "Fn::Sub": "${S3StackName}-BucketName"
                                            }
                                        }
                                    ]
                                ]
                            },
                            "S3OriginConfig": {
                                "OriginAccessIdentity": ""
                            }
                        }
                    ],
                    "DefaultCacheBehavior": {
                        "TargetOriginId": {
                            "Fn::Join": [
                                "",
                                [
                                    "S3-",
                                    {
                                        "Fn::ImportValue": {
                                            "Fn::Sub": "${S3StackName}-BucketName"
                                        }
                                    }
                                ]
                            ]
                        },
                        "ViewerProtocolPolicy": "redirect-to-https",
                        "MinTTL": "0",
                        "MaxTTL": "3600",
                        "DefaultTTL": "900",
                        "Compress": "true",
                        "ForwardedValues": {
                            "QueryString": "false"
                        }
                    },
                    "DefaultRootObject": "index.html",
                    "CustomErrorResponses": [
                        {
                            "ErrorCachingMinTTL": "300",
                            "ErrorCode": "403",
                            "ResponseCode": "200",
                            "ResponsePagePath": "/index.html"
                        },
                        {
                            "ErrorCachingMinTTL": "300",
                            "ErrorCode": "404",
                            "ResponseCode": "200",
                            "ResponsePagePath": "/index.html"
                        },
                        {
                            "ErrorCachingMinTTL": "300",
                            "ErrorCode": "500",
                            "ResponseCode": "500",
                            "ResponsePagePath": "/index.html"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::ImportValue": {
                                "Fn::Sub": "${S3StackName}-BucketName"
                            }
                        }
                    }
                ]
            }
        },
        "Route53Record": {
            "Type": "AWS::Route53::RecordSet",
            "Properties": {
                "HostedZoneName": {
                    "Ref": "HostedZone"
                },
                "Name": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Fn::ImportValue": { "Fn::Sub": "${S3StackName}-BucketName" }
                            },
                            "."
                        ]
                    ]
                },
                "Type": "A",
                "AliasTarget": {
                    "DNSName": { "Fn::GetAtt": ["CloudFrontDistribution", "DomainName"] },
                    "HostedZoneId": {
                        "Ref": "HostedZoneID"
                    }
                }
            }
        }
    },
    "Outputs": {
        "CloudFrontDistributionDomainName": {
            "Description": "CloudFront domain name",
            "Value": {
                "Fn::GetAtt": [
                    "CloudFrontDistribution",
                    "DomainName"
                ]
            }
        }
    }
}
