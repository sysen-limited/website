{
    "name": "venzra-website",
    "version": "1.0.0-alpha.1",
    "author": "SYSEN LIMITED",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "start": "node dist/server/main.js",
        "lint": "tslint --force --project client/tsconfig.json && tslint --force --project server/tsconfig.json",
        "build": "npm run lint && npm run build:client && npm run build:server",
        "build:client": "ng build --aot --prod --env=prod --output-path=dist/client",
        "build:server": "tsc -p ./server",
        "test": "npm run test:server && npm run test:client",
        "test:client": "concurrently -k -s first \"npm start\" \"protractor ./client/test/protractor.conf.js\"",
        "test:server": "istanbul cover --report=none ./node_modules/.bin/cucumber-js -- ./server/test/features --require ./server/test && ./node_modules/.bin/remap-istanbul -i coverage/coverage.json -o coverage/html-report -t html",
        "test:server:local": "mongo venzra-test --eval \"db.dropDatabase()\" && DB_URI=mongodb://localhost/venzra-test PORT=1337 npm run test:server",
        "watch": "concurrently -k -s first \"npm run watch:server\" \"npm run watch:client\"",
        "watch:client": "ng build -w --output-path=dist/client",
        "watch:server": "concurrently -k -s first \"tsc -w -p ./server\" \"DB_URI=mongodb://localhost/venzra nodemon dist/server/main.js\"",
        "webdrivers": "webdriver-manager update --versions.chrome 2.31 --versions.standalone 3.4.0",
        "deploy": "npm run build && zip -r -X website.zip .ebextensions package.json package-lock.json dist"
    },
    "dependencies": {
        "aws-sdk": "2.188.0",
        "body-parser": "1.18.2",
        "express": "4.16.2",
        "moment": "2.20.1",
        "mongoose": "5.0.1",
        "morgan": "1.9.0",
        "uuid": "3.2.1",
        "winston": "2.4.0"
    },
    "devDependencies": {
        "@angular/animations": "5.2.2",
        "@angular/cdk": "5.1.0",
        "@angular/cli": "1.6.6",
        "@angular/common": "5.2.2",
        "@angular/compiler": "5.2.2",
        "@angular/compiler-cli": "5.2.2",
        "@angular/core": "5.2.2",
        "@angular/flex-layout": "2.0.0-beta.12",
        "@angular/forms": "5.2.2",
        "@angular/http": "5.2.2",
        "@angular/language-service": "5.2.2",
        "@angular/material": "5.1.0",
        "@angular/platform-browser": "5.2.2",
        "@angular/platform-browser-dynamic": "5.2.2",
        "@angular/router": "5.2.2",
        "@types/aws-sdk": "2.7.0",
        "@types/express": "4.11.0",
        "@types/moment": "2.13.0",
        "@types/mongoose": "5.0.0",
        "@types/morgan": "1.7.35",
        "@types/node": "9.4.0",
        "@types/uuid": "3.4.3",
        "chai": "4.1.2",
        "classlist.js": "1.1.20150312",
        "codelyzer": "4.1.0",
        "concurrently": "3.5.1",
        "core-js": "2.5.3",
        "cucumber": "3.2.1",
        "hammerjs": "2.0.8",
        "istanbul": "0.4.5",
        "nock": "9.1.6",
        "nodemon": "1.14.11",
        "normalize.css": "7.0.0",
        "protractor": "5.3.0",
        "protractor-cucumber-framework": "4.2.0",
        "remap-istanbul": "0.10.1",
        "rxjs": "5.5.6",
        "shelljs": "0.8.1",
        "supertest": "3.0.0",
        "ts-node": "4.1.0",
        "tslint": "5.9.1",
        "typescript": "2.6.2",
        "web-animations-js": "2.3.1",
        "zone.js": "0.8.20"
    }
}
