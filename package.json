{
    "name": "venzra-website",
    "version": "1.0.0-alpha.1",
    "author": "SYSEN LIMITED",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "start": "node dist/server/main.js",
        "lint": "tslint --force --project client/tsconfig.json && tslint --force --project server/tsconfig.json",
        "build": "npm run lint && npm run build:client && npm run build:server",
        "build:client": "ng build --aot --prod --output-path=dist/client",
        "build:server": "tsc -p ./server",
        "test": "npm run test:server && npm run test:client",
        "test:client": "concurrently -k -s first \"npm start\" \"protractor ./client/test/protractor.conf.js\"",
        "test:server": "nyc ./node_modules/.bin/cucumber-js ./server/test/features --require ./server/test",
        "test:server:local": "mongo venzra-test --eval \"db.dropDatabase()\" && DB_URI=mongodb://localhost/venzra-test PORT=1337 npm run test:server",
        "watch": "concurrently -k -s first \"npm run watch:server\" \"npm run watch:client\"",
        "watch:client": "ng build --watch --output-path=dist/client",
        "watch:server": "concurrently -k -s first \"tsc -w -p ./server\" \"DB_URI=mongodb://localhost/venzra PORT=8080 nodemon dist/server/main.js\"",
        "webdrivers": "webdriver-manager update --versions.chrome 2.31 --versions.standalone 3.4.0",
        "deploy": "npm run build && zip -r -X website.zip .ebextensions package.json package-lock.json dist"
    },
    "dependencies": {
        "aws-sdk": "2.235.1",
        "body-parser": "1.18.2",
        "express": "4.16.3",
        "moment": "2.22.1",
        "mongoose": "5.0.17",
        "morgan": "1.9.0",
        "uuid": "3.2.1",
        "winston": "2.4.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "0.6.0",
        "@angular/animations": "6.0.0",
        "@angular/cdk": "6.0.1",
        "@angular/cli": "6.0.0",
        "@angular/common": "6.0.0",
        "@angular/compiler": "6.0.0",
        "@angular/compiler-cli": "6.0.0",
        "@angular/core": "6.0.0",
        "@angular/flex-layout": "6.0.0-beta.15",
        "@angular/forms": "6.0.0",
        "@angular/http": "6.0.0",
        "@angular/language-service": "6.0.0",
        "@angular/material": "6.0.1",
        "@angular/platform-browser": "6.0.0",
        "@angular/platform-browser-dynamic": "6.0.0",
        "@angular/router": "6.0.0",
        "@types/aws-sdk": "2.7.0",
        "@types/express": "4.11.1",
        "@types/moment": "2.13.0",
        "@types/mongoose": "5.0.13",
        "@types/morgan": "1.7.35",
        "@types/node": "10.0.6",
        "@types/uuid": "3.4.3",
        "chai": "4.1.2",
        "classlist.js": "1.1.20150312",
        "codelyzer": "4.3.0",
        "concurrently": "3.5.1",
        "core-js": "2.5.6",
        "cucumber": "3.2.1",
        "hammerjs": "2.0.8",
        "nock": "9.2.5",
        "nodemon": "1.17.4",
        "normalize.css": "8.0.0",
        "nyc": "11.7.2",
        "protractor": "5.3.1",
        "protractor-cucumber-framework": "5.0.0",
        "rxjs": "6.1.0",
        "shelljs": "0.8.2",
        "supertest": "3.0.0",
        "ts-node": "6.0.3",
        "tslint": "5.10.0",
